\newenvironment{themedTitleBlock}[1]{%
	\begingroup
	\setbeamercolor{block title}{fg=\useBlockTitleWriteColor,bg=\useBlockTitleColor}
	\setbeamercolor{block body} {fg=black,bg=\useBlockMainColor}
	\begin{block}{#1}
	}{%
	\end{block}
	\endgroup
}

\newenvironment{themedColorBlock}[1]{%
	\begingroup
	\setbeamercolor{block title}{fg=\useBlockTitleWriteColor,bg=\useBlockTitleColor}
	\setbeamercolor{block body} {fg=\useBlockTitleWriteColor,bg=\useBlockTitleColor}
	\begin{block}{#1}
	}{%
	\end{block}
	\endgroup
}